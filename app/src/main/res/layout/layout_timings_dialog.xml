<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/layout_timings_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Timings"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ListView
        android:id="@+id/layout_timings_lv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/layout_timings_tv"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/layout_timings_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_below="@id/layout_timings_lv"
        android:layout_alignStart="@id/layout_timings_lv" />

    <Button
        android:id="@+id/layout_timings_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:layout_below="@id/layout_timings_lv"
        android:layout_alignEnd="@id/layout_timings_lv" />

    <Button
        android:id="@+id/layout_timings_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_below="@id/layout_timings_btn_add"
        android:layout_alignStart="@id/layout_timings_btn_add" />

</RelativeLayout>
