<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/healthy_pink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/pale_blue</item>
    </style>

    <!-- Custom font -->
    <style name="myFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Button Style -->
    <style name="Green_button">
        <item name="android:backgroundTint">@color/positive_green</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Button Style -->
    <style name="Red_button">
        <item name="android:backgroundTint">@color/colorRed</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
